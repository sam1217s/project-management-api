// src/validators/task.validator.js
// ===================================
const { body } = require('express-validator');

const validateTask = [
  body('title')
    .trim()
    .isLength({ min: 3, max: 100 })
    .withMessage('T칤tulo: 3-100 caracteres'),

  body('description')
    .trim()
    .isLength({ min: 10, max: 1000 })
    .withMessage('Descripci칩n: 10-1000 caracteres'),

  body('assignedTo')
    .optional()
    .isMongoId()
    .withMessage('ID de usuario inv치lido'),

  body('priority')
    .optional()
    .isIn(['Low', 'Medium', 'High', 'Critical'])
    .withMessage('Prioridad inv치lida'),

  body('estimatedHours')
    .optional()
    .isFloat({ min: 0 })
    .withMessage('Horas estimadas deben ser positivas'),

  body('dueDate')
    .isISO8601()
    .withMessage('Fecha l칤mite inv치lida'),

  body('tags')
    .optional()
    .isArray()
    .withMessage('Tags deben ser un array')
];

const validateTaskStatus = [
  body('status')
    .isMongoId()
    .withMessage('ID de estado inv치lido')
];

const validateAssign = [
  body('user')
    .isMongoId()
    .withMessage('ID de usuario inv치lido')
];

module.exports = {
  validateTask,
  validateTaskStatus,
  validateAssign
};

